/* pages/orders/index.wxss */
/*切换栏*/
page{
  background-color:#f5f5f5;
  color: #333333;
  height:100%;
  width: 100%;
  
}
.swiper-tab {
  height: 50px;
  line-height: 50px;
  background: #ffff;
  color:#666666;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border-bottom:1px solid rgb(0, 0, 0); */
}
 
.swiper-tab-list {
  margin: 0 10px;
  padding: 0 4px;
  font-size: 15px;
}
 
.on {
  border-bottom:3px solid#25CFB6;
  color: #25CFB6;
}
 
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  /* border-bottom: 1rpx solid #BEBEBE	; */
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
.orderBtn{
  margin-top: 20rpx;
}
.buyBtn{
width: 49%;
height: 70rpx;
border-radius: 5px;
text-align: center;
line-height: 70rpx;
background-color: #fff;
} 
.saleBtn{
float: right;
width: 50%;
height: 70rpx;
border-radius: 5px;
text-align: center;
line-height: 70rpx;
background-color: #fff;
margin-top: -73rpx;
}

/*订单列表*/
.orderDetails {
  background: #fff;
  margin-top: 20rpx;
  font-size: 24rpx;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  /* border-bottom: 1rpx solid #BEBEBE; */
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
.orderListDetails {
  display: flex;
  height: 250rpx;
  /* border-bottom: 1rpx solid #f3f3f3; */
}
 
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 50rpx;
  margin-left: 60rpx;
  background-color: #25CFB6;
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}
 
.orderListDetails .productInfo {
  flex: 4;
  /* margin: 75rpx 10px 20px 30rpx; */
  margin-top: 80rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
}
 
.productCount {
  height: 35rpx;
  line-height: 0rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}

.situationShow{
height: 100rpx;
position: relative;
width: 100rpx;
margin-right: 25rpx;
margin-top: 15rpx;
font-size: 24rpx;
}
.orderStatus {
  width:80rpx;
  right: 13%;
  top: 10rpx;
 position: absolute;

}
.logisticsNumber{
  right: 20%;
  top: 65rpx;
  position: absolute;
}
.count{
  right: 20%;
  top: 90rpx;
  position: absolute;
  font-size: 18rpx;
}
.settlement{
position: fixed;
bottom: 0;
height:150rpx;
background-color: #fff;
margin-top: 20px;
width: 100%;
font-size: 24rpx;
color: #333333;
}
.settleContent1{
  margin-left: 69rpx;
  margin-top: 43rpx;
}
.settleContent2{
  margin-left: 69rpx;
  margin-top: 10rpx;
}
 