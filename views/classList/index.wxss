/* views/classList/index.wxss */

page {
  background-color: #f5f5f5;
}

.header {
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 32px;
}

.header .flex {
  width: 50%;
}

.list {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #333;
}

.list >view {
  width: 345rpx;
}

.list image {
  display: block;
  width: 100%;
}

.list >view > view {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.list .price,.list .title{
  padding: 0 15rpx;
}
.list .price text:first-child{
  font-size: 32rpx;
  color: #EE3C42;
}
.list .price .text:last-child{
  font-size: 24rpx;
  text-align: right;
  color: #999;
}
.screen{
  margin: 0 0 20rpx;
  box-shadow:0 2px 1px #f5f5f5;
}