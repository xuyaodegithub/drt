/* views/index/index.wxss */
page{
  background-color: #f5f5f5;
}
.seach {
  padding:0 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}
.seach image{
  width: 50rpx;
  height: 50rpx;
}
.zuixin image{
  display: blcok;
  width: 100%;
}
.seach .seachBox {
  padding: 0 30rpx;
  width: 55%;
  background-color: #f5f5f5;
  height:32px;
  border-radius: 16px;
  font-size: 24rpx;
  color: #999;
}
.nav{
  font-size: 24rpx;
  text-align: center;
  padding-top: 20rpx;
  background-color: #fff;
}
.nav > view{
  width: 25%;
  padding-bottom: 20rpx;
}
.nav image{
  display:block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 10rpx;
}
.scroll{
  border-top: 1px solid #eee;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  background-color: #fff;
}
.scroll .all{
  padding: 0 20rpx;
}
.scroll .all view{
  display: inline-block;
  padding: 0 20rpx;
  position: relative;
}
.scroll .all view:last-child{
  margin-right: 100rpx;
}
.scroll .all view::before{
  display: block;
  content: '';
  width: 0;
  height: 10rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  background-color: rgba(135, 52, 204, .6);
  transition: all .2s linear;
}
.scroll .all .active::before{
  width: 80%;
}
.prolist{
  padding: 30rpx;
}
.prolist > view{
  position: relative;
  font-size: 24rpx;
  line-height: 48rpx;
  width: 100%;
  color: #333;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.prolist > view:nth-child(event){
  border-right: 1px solid #eee;
}
.prolist > view .imgs{
  position: relative;
  overflow: hidden;
  height: 350rpx;
}
.prolist .imgs image{
  width: 100%;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.prolist > view .title{
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 46rpx;
  max-height: 92rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.prolist > view .price text:first-child{
  font-size: 36rpx;
  color: #EE3C42;
}
.prolist > view .price text:last-child{
  width: 50%;
  text-align: right;
}
.prolist > view .tag{
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  width: 25%;
  position: absolute;
  top: 50rpx;
  text-align: center;
  right: 20rpx;
  border-radius: 30rpx 0 0 30rpx;
  background-color: #fa7de1;
}